{
  "manifest_version": 3,
  "name": "Spectrum",
  "version": "0.1.0",
  "description": "Cross-spectrum news bias detection and analysis",
  "permissions": ["storage", "activeTab", "alarms", "tabs", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "shared/constants.js",
      "shared/storage.js",
      "content/article-extractor.js",
      "content/youtube-detector.js",
      "content/content-script.js"
    ],
    "run_at": "document_idle"
  }],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["deep-analysis.html", "deep-analysis/*"],
    "matches": ["<all_urls>"]
  }]
}
